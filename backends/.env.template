# Copy this file to .env and fill in the secrets before running uv run uvicorn app.main:app --reload

# LLM / OpenRouter
OPENROUTER_API_KEY=replace_me
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=anthropic/claude-3.5-haiku
MOCK_AI_RESPONSES_FILE=./mocks/ai_generate_sample.json

# Database
DB_URL=sqlite:///./todos.db

# Vector DB / Embeddings
CHROMA_DIR=./chroma_data
EMBEDDING_MODEL=all-MiniLM-L6-v2

# App Behavior
DEBUG=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW_SECONDS=60

# Agent Relay Providers
FETCHAI_API_KEY=
FETCHAI_BASE_URL=
JANITORAI_API_KEY=
JANITORAI_BASE_URL=
WORDWARE_API_KEY=
WORDWARE_BASE_URL=
LETTA_API_KEY=
LETTA_BASE_URL=

# Agent Relay Behavior
AGENT_HTTP_TIMEOUT=30
AGENT_FALLBACK_ENABLED=true
